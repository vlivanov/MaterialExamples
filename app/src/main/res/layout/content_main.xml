<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:a="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        a:layout_width="match_parent"
        a:layout_height="match_parent"
        a:paddingLeft="@dimen/activity_horizontal_margin"
        a:paddingRight="@dimen/activity_horizontal_margin"
        a:paddingTop="@dimen/activity_vertical_margin"
        a:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="com.vivanov.material.materialexample.MainActivity">

    <com.vivanov.material.materialexample.views.RippleView
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:padding="0dp"
            a:id="@+id/button_ripple">

        <android.support.v7.widget.AppCompatButton
                style="@style/Widget.AppCompat.Button"
                a:id="@+id/button"
                a:padding="0dp"
                a:text="@string/cards"
                a:layout_margin="@dimen/activity_horizontal_margin"
                a:layout_width="match_parent"
                a:layout_height="wrap_content"/>

    </com.vivanov.material.materialexample.views.RippleView>

    <android.support.v7.widget.AppCompatButton
            style="@style/Widget.AppCompat.Button"
            a:layout_below="@id/button_ripple"
            a:id="@+id/motions_button"
            a:padding="0dp"
            a:text="@string/motions"
            a:layout_margin="@dimen/activity_horizontal_margin"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"/>

</RelativeLayout>
